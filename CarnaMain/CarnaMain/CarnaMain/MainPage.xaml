<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CarnaMain"
             x:Class="CarnaMain.MainPage"
             BackgroundColor="LightBlue">



    <StackLayout>
        <!-- In this page It welcomes you into the app and let's you enter the home page -->
        <Label Text="Welcome to the Carna Tourism App!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <!-- A image of Mace Pier -->
        <Image x:Name="MacePier" 
               Margin="10, 5, 10, 10"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="600"
               HeightRequest="390"
               Aspect="AspectFit"/>

        <!-- The button to enter into the Home Page -->
        <Button x:Name="PleaseEnterButton"
            Text="Please Enter"
            Clicked="PleaseEnterButton_Clicked"
            HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>
