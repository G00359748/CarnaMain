<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CarnaMain"
             x:Class="CarnaMain.MainPage"
             BackgroundColor="LightBlue">



    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to the Carna Tourism App!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Image x:Name="MacePier" 
               Margin="10, 5, 10, 10"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="600"
               HeightRequest="390"
               Aspect="AspectFit"/>

        <Button x:Name="PleaseEnterButton"
            Text="Please Enter"
            Clicked="PleaseEnterButton_Clicked"
            HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>
