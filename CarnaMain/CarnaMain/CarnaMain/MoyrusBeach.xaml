<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarnaMain.MoyrusBeach"
              BackgroundColor="LightBlue">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>
                    <!-- In this page I have the image of Moyrus Beach on top -->
                    <Image x:Name="Moyrus" Aspect="AspectFit"></Image>
                    <!-- This is the text I have written for the page -->
                    <Label Text="Moyrus Beach is loacated in Moyrus in the village of Carna Co.Galway.I would recommended that this the best beach to go to on a nice summers day.It is also the safest beach around the village and it's highly recommended by the local people when tourists ask for directions to the loacal beach.This Beach would be the longest beach in the village of Carna as it is separated into different sections."
                TextColor="DarkGray"
                FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>